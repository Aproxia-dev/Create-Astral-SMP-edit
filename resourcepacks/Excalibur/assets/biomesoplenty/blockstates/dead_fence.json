{
    "multipart": [
        {   "apply": { "model": "biomesoplenty:block/dead_fence_post" }},
        {   "when": { "north": "true" },
            "apply": { "model": "biomesoplenty:block/dead_fence_side", "uvlock": true }
        },
        {   "when": { "east": "true" },
            "apply": { "model": "biomesoplenty:block/dead_fence_side", "y": 90 }
        },
        {   "when": { "south": "true" },
            "apply": { "model": "biomesoplenty:block/dead_fence_side", "uvlock": true, "y": 180 }
        },
        {   "when": { "west": "true" },
            "apply": { "model": "biomesoplenty:block/dead_fence_side", "y": 270 }
        }
    ]
}
